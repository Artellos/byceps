server {
    listen 80;
    listen [::]:80;

    root /var/www/html;
    server_name ${SERVER_NAME_ADMIN};

    location @byceps {
        uwsgi_pass ${UWSGI_ADDRESS};
        include uwsgi_params;
        proxy_set_header Host $host;
    }

    include includes/byceps;
}

